@page
@model VONetData.Pages.ConnectModel
@{
    ViewData["Title"] = "Connect Request";
}

<div class="max-w-xl mx-auto bg-white rounded shadow p-8 mt-8">
    <h2 class="text-2xl font-bold mb-6 text-gray-800 text-center">Request a Connection</h2>
    <form method="post" class="space-y-6">
        <fieldset>
            <legend class="font-semibold mb-2">Personal Info</legend>
            <input asp-for="Member.FirstName" class="w-full border rounded px-3 py-2 mb-2" placeholder="First Name" />
            <input asp-for="Member.LastName" class="w-full border rounded px-3 py-2 mb-2" placeholder="Last Name" />
            <input asp-for="Member.Email" class="w-full border rounded px-3 py-2 mb-2" placeholder="Email Address" />
            <input asp-for="Member.Phone" class="w-full border rounded px-3 py-2 mb-2" placeholder="Phone Number" />
        </fieldset>
        <fieldset>
            <legend class="font-semibold mb-2">Address Info</legend>
            <input asp-for="Member.StreetAddress" class="w-full border rounded px-3 py-2 mb-2" placeholder="Street Address" />
            <input asp-for="Member.Unit" class="w-full border rounded px-3 py-2 mb-2" placeholder="Unit / Apartment #" />
            <input asp-for="Member.City" class="w-full border rounded px-3 py-2 mb-2" placeholder="City" />
            <select asp-for="Member.State" class="w-full border rounded px-3 py-2 mb-2">
                <option value="">Select State</option>
                <option value="NV">Nevada</option>
                <option value="CA">California</option>
                <option value="AZ">Arizona</option>
            </select>
            <input asp-for="Member.ZipCode" class="w-full border rounded px-3 py-2 mb-2" placeholder="Zip Code" />
            <div class="flex items-center mb-2">
                <input asp-for="Member.RoofAccess" class="mr-2" type="checkbox" />
                <label class="text-sm" for="Member_RoofAccess">Check this box if you have roof access</label>
            </div>
            <input asp-for="Member.Referral" class="w-full border rounded px-3 py-2 mb-2" placeholder="How did you hear about us?" />
            <div class="flex items-center mb-2">
                <input asp-for="Member.AcceptedLicense" class="mr-2" type="checkbox" />
                <label class="text-sm" for="Member_AcceptedLicense">I agree to the <a href="https://networkcommons.org/license/" target="_blank" class="text-blue-600 underline">Network Commons License</a></label>
            </div>
        </fieldset>
        <button type="submit" class="w-full bg-yellow-600 text-white py-2 rounded font-semibold hover:bg-yellow-700 transition">Submit</button>
    </form>
    @if (Model.Success)
    {
        <div class="bg-green-100 text-green-800 rounded p-3 mt-4 text-center">Thank you for your connection request! Your submission has been received.</div>
    }
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="bg-red-100 text-red-800 rounded p-3 mt-4 text-center">@Model.ErrorMessage</div>
    }
</div>
