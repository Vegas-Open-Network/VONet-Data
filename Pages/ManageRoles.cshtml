@page
@model VONetData.Pages.ManageRolesModel
@{
    ViewData["Title"] = "Manage Roles";
}
<div class="max-w-xl mx-auto bg-white rounded shadow p-8 mt-8">
    <h2 class="text-2xl font-bold mb-6 text-gray-800 text-center">Manage User Roles</h2>
    <form method="post" class="mb-6 flex gap-2 justify-center">
        <input asp-for="Email" class="border rounded px-3 py-2" placeholder="User Email" />
        <button type="submit" class="bg-yellow-600 text-white px-4 py-2 rounded font-semibold hover:bg-yellow-700 transition">Search</button>
    </form>
    @if (Model.FoundUser != null)
    {
        <div class="mb-4 text-center">
            <div class="font-bold">@Model.FoundUser.Email</div>
            <div class="text-sm text-gray-600">@Model.FoundUser.UserName</div>
            <div class="mt-2">
                @if (Model.IsAdmin)
                {
                    <form method="post">
                        <input type="hidden" name="Email" value="@Model.FoundUser.Email" />
                        <button name="action" value="remove" class="bg-red-600 text-white px-4 py-2 rounded">Remove Admin Role</button>
                    </form>
                }
                else
                {
                    <form method="post">
                        <input type="hidden" name="Email" value="@Model.FoundUser.Email" />
                        <button name="action" value="add" class="bg-green-600 text-white px-4 py-2 rounded">Make Admin</button>
                    </form>
                }
            </div>
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="bg-blue-100 text-blue-800 rounded p-3 mt-4 text-center">@Model.Message</div>
    }
</div>
