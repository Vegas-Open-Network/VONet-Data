<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VONetData</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VONetData.styles.css" asp-append-version="true" />
</head>
<body class="bg-gray-50 min-h-screen flex flex-col text-gray-800">
    <header class="bg-white shadow">
        <nav class="container mx-auto flex flex-wrap items-center justify-between py-4 px-4">
            <div class="flex items-center gap-2">
                <span class="font-bold text-xl text-blue-800">VONet</span>
                <span class="ml-1 text-sm uppercase tracking-widest text-gray-500">Data</span>
            </div>
            <ul class="flex flex-wrap gap-6 text-sm font-medium text-gray-700">
                <li><a href="/" class="hover:text-blue-700">Home</a></li>
                <li><a href="/FeatureRequest" class="hover:text-blue-700">Feature Request</a></li>
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    if (User.IsInRole("Admin"))
                    {
                        <li><a href="/AdminPanel" class="text-blue-700 hover:text-blue-600 font-semibold">Admin Panel</a></li>
                    }
                    if (User.IsInRole("Admin") || User.IsInRole("Installer"))
                    {
                        <li><a href="/Installers" class="text-blue-700 hover:text-blue-600 font-semibold">Installers</a></li>
                        <li><a href="/Network" class="text-blue-700 hover:text-blue-600 font-semibold">Network</a></li>
                    }
                    <li><a href="/UserPanel" class="hover:text-blue-700">Your Portal</a></li>
                    <li>
                        <form method="post" asp-page="/SignOut" class="inline">
                            <button type="submit" class="hover:text-blue-700 bg-transparent border-none cursor-pointer">Sign Out</button>
                        </form>
                    </li>
                }
                else
                {
                    <li><a href="/Login" class="hover:text-blue-700">Login</a></li>
                    <li><a href="/Register" class="hover:text-blue-700">Register</a></li>
                }
            </ul>
        </nav>
    </header>
    <main class="container mx-auto flex-1 py-8 px-4">
        @RenderBody()
    </main>
    <footer class="bg-white border-t py-6 mt-8">
        <div class="container mx-auto text-center text-xs text-gray-500">
            <div class="font-semibold tracking-wide text-blue-800">Vegas Open Network (VONet)</div>
            <div class="mt-1">&copy; @(DateTime.UtcNow.Year)</div>
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>