@page
@model VONetData.Pages.AdminPanelModel
@{
    ViewData["Title"] = "Admin Panel";
}
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<!-- Page Wrapper -->
<div class="min-h-screen bg-gray-50">

    <!-- Top Bar -->
    <header class="bg-white border-b">
        <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
            <div class="flex items-center gap-2">
                <span class="material-icons text-blue-700 text-3xl">settings_input_antenna</span>
                <div>
                    <h1 class="text-xl font-bold text-gray-800">VONet Admin</h1>
                    <p class="text-xs text-gray-500">User Management</p>
                </div>
            </div>
            <div class="flex items-center gap-2">
                <input type="text"
                       id="userSearch"
                       placeholder="Search users..."
                       class="border rounded px-3 py-2 text-sm"
                       oninput="filterUsers()" />
                <button class="bg-blue-700 text-white px-4 py-2 rounded font-semibold hover:bg-blue-800 transition">
                    <span class="material-icons align-middle text-base">refresh</span>
                    <span class="align-middle">Refresh</span>
                </button>
            </div>
        </div>
    </header>

    <!-- Content -->
    <main class="max-w-7xl mx-auto px-6 py-8">

        <!-- Users Table -->
        <div class="overflow-x-auto rounded-lg shadow">
            <table class="min-w-full bg-white rounded-lg">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="px-4 py-2 text-left text-xs font-semibold text-gray-600">Email</th>
                        <th class="px-4 py-2 text-left text-xs font-semibold text-gray-600">Username</th>
                        <th class="px-4 py-2 text-left text-xs font-semibold text-gray-600">Admin</th>
                        <th class="px-4 py-2 text-left text-xs font-semibold text-gray-600">Actions</th>
                    </tr>
                </thead>
                <tbody id="userTable">
                    @foreach (var user in Model.IdentityUsers)
                    {
                        <tr class="border-b hover:bg-blue-50">
                            <td class="px-4 py-2">@user.Email</td>
                            <td class="px-4 py-2">@user.UserName</td>
                            <td class="px-4 py-2">
                                @if (Model.AdminEmails.Contains(user.Email))
                                {
                                    <span class="inline-flex items-center gap-1 text-green-600 font-semibold">
                                        <span class="material-icons text-base">verified</span> Admin
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center gap-1 text-gray-400 font-semibold">
                                        <span class="material-icons text-base">person</span> User
                                    </span>
                                }
                            </td>
                            <td class="px-4 py-2">
                                <form method="post" class="inline-block">
                                    <input type="hidden" name="Email" value="@user.Email" />
                                    @if (Model.AdminEmails.Contains(user.Email))
                                    {
                                        <button name="action" value="remove" class="bg-red-600 text-white px-3 py-1 rounded text-xs font-semibold hover:bg-red-700 transition">Remove Admin</button>
                                    }
                                    else
                                    {
                                        <button name="action" value="add" class="bg-green-600 text-white px-3 py-1 rounded text-xs font-semibold hover:bg-green-700 transition">Make Admin</button>
                                    }
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="bg-blue-100 text-blue-800 rounded p-3 mt-4 text-center">@Model.Message</div>
        }

        <!-- Recent Feature Requests -->
        <section class="mt-10">
            <div class="flex items-center justify-between mb-2">
                <h3 class="text-lg font-semibold">Recent Feature Requests</h3>
                <a href="/FeatureRequest" class="text-sm text-blue-700 hover:underline inline-flex items-center gap-1">
                    <span>View all</span>
                    <span class="material-icons text-sm">open_in_new</span>
                </a>
            </div>
            <ul class="space-y-2">
                @foreach (var req in Model.RecentFeatureRequests)
                {
                    <li class="border rounded p-3 bg-white">
                        <div class="font-bold">@req.Title</div>
                        <div class="text-sm text-gray-600">@req.Description</div>
                    </li>
                }
            </ul>
        </section>

        <!-- Context links (optional, compact and relevant) -->
        <nav class="mt-8 text-sm text-gray-500">
            <ul class="flex gap-4">
                <li><a href="/AdminPanel" class="hover:underline inline-flex items-center gap-1"><span class="material-icons text-sm">supervisor_account</span> Users</a></li>
                <li><a href="/Map" class="hover:underline inline-flex items-center gap-1"><span class="material-icons text-sm">map</span> Network Map</a></li>
                <li><a href="/FeatureRequest" class="hover:underline inline-flex items-center gap-1"><span class="material-icons text-sm">lightbulb</span> Feature Requests</a></li>
            </ul>
        </nav>

        <div class="mt-6 text-xs text-gray-400">Vegas Open Network Data</div>
    </main>
</div>

<script>
    function filterUsers() {
        var input = document.getElementById('userSearch').value.toLowerCase();
        var rows = document.querySelectorAll('#userTable tr');
        rows.forEach(function (row) {
            var email = row.children[0].textContent.toLowerCase();
            var username = row.children[1].textContent.toLowerCase();
            row.style.display = (email.includes(input) || username.includes(input)) ? '' : 'none';
        });
    }
</script>
