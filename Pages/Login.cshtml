@page
@model VONetData.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="max-w-md mx-auto bg-white rounded shadow p-8 mt-8">
    <h2 class="text-2xl font-bold mb-6 text-gray-800 text-center">Login</h2>
    <form method="post" class="space-y-6">
        <input asp-for="Input.Email" class="w-full border rounded px-3 py-2 mb-2" placeholder="Email" />
        <input asp-for="Input.Password" class="w-full border rounded px-3 py-2 mb-2" placeholder="Password" type="password" />
        <button type="submit" class="w-full bg-yellow-600 text-white py-2 rounded font-semibold hover:bg-yellow-700 transition">Login</button>
    </form>
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="bg-red-100 text-red-800 rounded p-3 mt-4 text-center">@Model.ErrorMessage</div>
    }
    <div class="mt-4 text-center">
        <a href="/Register" class="text-blue-600 hover:underline">Don't have an account? Register</a>
    </div>
</div>
