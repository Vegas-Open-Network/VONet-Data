@page
@model VONetData.Pages.Installers.IndexModel
@{
    ViewData["Title"] = "Installers";
}
<h2 class="text-2xl font-bold mb-4">Installers Portal</h2>
<p class="text-sm text-gray-600 mb-6">Manage connection requests, assignments, statuses and notes.</p>
<div class="grid md:grid-cols-3 gap-6">
    <a href="/Installers/Requests" class="border rounded p-4 bg-white hover:shadow transition block">
        <h3 class="font-semibold mb-1">Connection Requests</h3>
        <p class="text-xs text-gray-500">Intake through install workflow.</p>
    </a>
    <a href="/Installers/Assignments" class="border rounded p-4 bg-white hover:shadow transition block">
        <h3 class="font-semibold mb-1">Assignments</h3>
        <p class="text-xs text-gray-500">Your assigned requests.</p>
    </a>
    <a href="/Network" class="border rounded p-4 bg-white hover:shadow transition block">
        <h3 class="font-semibold mb-1">Network Map</h3>
        <p class="text-xs text-gray-500">Sites & Links overview.</p>
    </a>
</div>