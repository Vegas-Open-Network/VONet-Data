@page
@model VONetData.Pages.Network.CreateModel
@{
    ViewData["Title"] = "Create Site";
}
<h2>Create Site</h2>
<form method="post">
    <div class="mb-3">
        <label asp-for="Site.Name" class="form-label"></label>
        <input asp-for="Site.Name" class="form-control" />
        <span asp-validation-for="Site.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Site.Type" class="form-label"></label>
        <select asp-for="Site.Type" class="form-select">
            <option value="node">Node</option>
            <option value="supernode">Supernode</option>
            <option value="candidate">Candidate</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="Site.Description" class="form-label"></label>
        <textarea asp-for="Site.Description" class="form-control"></textarea>
    </div>
    <fieldset class="mb-3">
        <legend class="fs-6">Location</legend>
        <p class="text-muted">Enter either Latitude &amp; Longitude OR an Address. If only address is provided we will attempt to geocode.</p>
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label asp-for="Site.Latitude" class="form-label"></label>
                <input asp-for="Site.Latitude" class="form-control" />
                <span asp-validation-for="Site.Latitude" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Site.Longitude" class="form-label"></label>
                <input asp-for="Site.Longitude" class="form-control" />
                <span asp-validation-for="Site.Longitude" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Site.Address" class="form-label"></label>
                <input asp-for="Site.Address" class="form-control" />
                <span asp-validation-for="Site.Address" class="text-danger"></span>
            </div>
        </div>
    </fieldset>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
