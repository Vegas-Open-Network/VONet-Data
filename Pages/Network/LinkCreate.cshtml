@page
@model VONetData.Pages.Network.LinkCreateModel
@{
    ViewData["Title"] = "Add Link";
}
<a href="/Network" class="text-sm text-blue-700 hover:underline">? Back</a>
<h2 class="text-2xl font-bold mt-4 mb-4">Add Link</h2>
@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="bg-red-100 text-red-800 rounded p-2 text-sm mb-4">@Model.Error</div>
}
<form method="post" class="space-y-4 max-w-lg">
    <div class="grid grid-cols-2 gap-4">
        <div>
            <label class="block text-xs font-semibold mb-1">From Site Id</label>
            <input asp-for="Input.FromSiteId" class="border rounded w-full px-3 py-2" />
        </div>
        <div>
            <label class="block text-xs font-semibold mb-1">To Site Id</label>
            <input asp-for="Input.ToSiteId" class="border rounded w-full px-3 py-2" />
        </div>
    </div>
    <div class="grid grid-cols-2 gap-4">
        <div>
            <label class="block text-xs font-semibold mb-1">Medium</label>
            <input asp-for="Input.Medium" class="border rounded w-full px-3 py-2" />
        </div>
        <div>
            <label class="block text-xs font-semibold mb-1">Distance Km</label>
            <input asp-for="Input.DistanceKm" class="border rounded w-full px-3 py-2" />
        </div>
    </div>
    <button class="bg-blue-700 text-white px-6 py-2 rounded">Save</button>
</form>