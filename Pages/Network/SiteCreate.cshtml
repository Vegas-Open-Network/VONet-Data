@page
@model VONetData.Pages.Network.SiteCreateModel
@{
    ViewData["Title"] = "Add Site";
}
<a href="/Network" class="text-sm text-blue-700 hover:underline">? Back</a>
<h2 class="text-2xl font-bold mt-4 mb-4">Add Site</h2>
@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="bg-red-100 text-red-800 rounded p-2 text-sm mb-4">@Model.Error</div>
}
<form method="post" class="space-y-4 max-w-lg">
    <div>
        <label class="block text-xs font-semibold mb-1">Name</label>
        <input asp-for="Input.Name" class="border rounded w-full px-3 py-2" />
    </div>
    <div>
        <label class="block text-xs font-semibold mb-1">Type</label>
        <select asp-for="Input.Type" class="border rounded w-full px-3 py-2">
            <option value="supernode">Supernode</option>
            <option value="node">Node</option>
            <option value="candidate">Candidate</option>
        </select>
    </div>
    <div>
        <label class="block text-xs font-semibold mb-1">Description</label>
        <textarea asp-for="Input.Description" class="border rounded w-full px-3 py-2" rows="3"></textarea>
    </div>
    <div class="grid grid-cols-2 gap-4">
        <div>
            <label class="block text-xs font-semibold mb-1">Latitude</label>
            <input asp-for="Input.Latitude" class="border rounded w-full px-3 py-2" />
        </div>
        <div>
            <label class="block text-xs font-semibold mb-1">Longitude</label>
            <input asp-for="Input.Longitude" class="border rounded w-full px-3 py-2" />
        </div>
    </div>
    <div>
        <label class="block text-xs font-semibold mb-1">Address</label>
        <input asp-for="Input.Address" class="border rounded w-full px-3 py-2" />
    </div>
    <button class="bg-blue-700 text-white px-6 py-2 rounded">Save</button>
</form>
