@page
@model VONetData.Pages.FeatureRequestModel
@{
    ViewData["Title"] = "Feature Request";
}

<div class="max-w-xl mx-auto bg-white rounded shadow p-8 mt-8">
    <h2 class="text-2xl font-bold mb-6 text-gray-800 text-center">Submit a Feature Request</h2>
    <form method="post" class="space-y-6">
        <input asp-for="Request.Title" class="w-full border rounded px-3 py-2 mb-2" placeholder="Title" />
        <textarea asp-for="Request.Description" class="w-full border rounded px-3 py-2 mb-2" placeholder="Describe your feature request" rows="4"></textarea>
        <input asp-for="Request.Email" class="w-full border rounded px-3 py-2 mb-2" placeholder="Your Email (optional)" />
        <button type="submit" class="w-full bg-yellow-600 text-white py-2 rounded font-semibold hover:bg-yellow-700 transition">Submit</button>
    </form>
    @if (Model.Success)
    {
        <div class="bg-green-100 text-green-800 rounded p-3 mt-4 text-center">Thank you! Your feature request has been submitted.</div>
    }
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="bg-red-100 text-red-800 rounded p-3 mt-4 text-center">@Model.ErrorMessage</div>
    }
</div>
