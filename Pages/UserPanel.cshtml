@page
@model VONetData.Pages.UserPanelModel
@{
    ViewData["Title"] = "User Portal";
}

<div class="max-w-2xl mx-auto bg-white rounded shadow p-8 mt-8">
    <h2 class="text-2xl font-bold mb-6 text-gray-800 text-center">Your Connect Requests</h2>
    @if (Model.JoinRequests.Count == 0)
    {
        <div class="text-gray-600 text-center">No connect requests found for your account.</div>
    }
    else
    {
        <ul class="space-y-4">
            @foreach (var req in Model.JoinRequests)
            {
                <li class="border rounded p-4">
                    <div class="font-bold">@req.FirstName @req.LastName</div>
                    <div class="text-sm text-gray-600">@req.Email</div>
                    <div class="text-sm">@req.StreetAddress, @req.City, @req.State @req.ZipCode</div>
                </li>
            }
        </ul>
    }
    <div class="mt-6 text-center">
        <a href="/Connect" class="text-blue-600 hover:underline">Submit a new connect request</a>
    </div>
</div>
