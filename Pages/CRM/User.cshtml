@page "{id}"
@model VONetData.Pages.CRMUserModel
@{
    ViewData["Title"] = "User Detail";
}
<a href="/CRM" class="text-sm text-blue-700 hover:underline">? Back to CRM</a>
<h2 class="text-2xl font-bold mt-4 mb-4 text-gray-800">User Detail</h2>
@if (Model.User == null)
{
    <div class="text-gray-600">Not found.</div>
}
else
{
    <div class="space-y-4">
        <div class="border bg-white rounded p-4">
            <h3 class="font-semibold mb-2">Account</h3>
            <div class="text-sm">Email: @Model.User.Email</div>
            <div class="text-sm">UserName: @Model.User.UserName</div>
            <div class="text-sm">Id: @Model.User.Id</div>
        </div>
        <div class="border bg-white rounded p-4">
            <h3 class="font-semibold mb-2">Assigned Requests</h3>
            @if (Model.AssignedMembers.Count == 0)
            {
                <div class="text-xs text-gray-500">None assigned.</div>
            }
            else
            {
                <ul class="list-disc ml-5 text-sm space-y-1">
                @foreach (var m in Model.AssignedMembers)
                {
                    <li><a class="text-blue-700 hover:underline" href="/CRM/Member/@m.Id">@m.StreetAddress, @m.City</a></li>
                }
                </ul>
            }
        </div>
    </div>
}