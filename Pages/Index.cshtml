@page
@model VONetData.Pages.IndexModel
@{
    ViewData["Title"] = "Vegas Open Network Data";
}

<div class="flex flex-col items-center mt-12">
    <h1 class="text-3xl font-bold text-gray-800 mb-2">Welcome to VONet Data!</h1>
    <p class="text-lg text-gray-600 mb-4 text-center max-w-xl">VONet Data is used to track installs, users, and various other functions in the Vegas Open Network.</p>
    <a class="bg-blue-700 text-white px-6 py-2 rounded shadow hover:bg-blue-800 transition mb-8" href="/Connect">Request a Connection</a>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-8 container mx-auto mt-8">
    <div>
        <h4 class="flex items-center text-xl font-semibold mb-2"><span class="material-icons mr-2">person</span> User Tools</h4>
        <div class="border-b mb-2"></div>
        <ul class="space-y-2">
            <li><a href="/Connect" class="text-blue-700 hover:underline">Connect Request</a></li>
            <li><a href="/Map" class="text-blue-700 hover:underline">Map</a></li>
            <li><a href="/FeatureRequest" class="text-blue-700 hover:underline">Feature Requests</a></li>
            <li><a href="/UserPanel" class="text-blue-700 hover:underline">Your Portal</a></li>
        </ul>
    </div>
    <div>
        <h4 class="flex items-center text-xl font-semibold mb-2"><span class="material-icons mr-2">settings_input_antenna</span> Volunteer Tools</h4>
        <div class="border-b mb-2"></div>
        <ul class="space-y-2">
            <li><a href="/AdminPanel" class="text-blue-700 hover:underline">Admin Panel</a></li>
        </ul>
    </div>
    <div>
        <h4 class="flex items-center text-xl font-semibold mb-2"><span class="material-icons mr-2">build</span> Developer Tools</h4>
        <div class="border-b mb-2"></div>
        <ul class="space-y-2">
            <li><a href="#" class="text-blue-700 hover:underline">Source Code</a></li>
        </ul>
    </div>
</div>

